<header class="d-flex align-items-center">

  <div class="header-content container">
    <div class="logo-lp">
      <%= image_tag "logo.png", alt: "In touch agency logo", width: 400, height: 120  %>
    </div>

    <h1 class="header-title">Welcome to In Touch</h1>
    <h2 class="header-subtitle">We love to help you track your project <br> and send automate report to your clients</h2>

    <div class="login">
      <div class="btn btn-show mr-3">
        <%= link_to sanitize("<i class='fas fa-sign-in-alt'></i> Login"), user_trello_omniauth_authorize_path, class: "nav-link" %>
      </div>
      <div class="btn btn-show">
        <%= link_to sanitize("<i class='fas fa-rocket'></i> Get started today"), user_trello_omniauth_authorize_path, class: "nav-link" %>
      </div>
    </div>

  </div>

</header>


